<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/button_click_effact_color"
    tools:context=".chatnow.ChatPopup">


    <androidx.cardview.widget.CardView

        android:id="@+id/asking_new_user_whole_layout"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"


        app:layout_constraintWidth_percent="0.8"

        app:layout_constraintHeight_percent="0.25"

        app:cardCornerRadius="@dimen/heading_text_14sp"
        android:elevation="@dimen/heading_text_14sp"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/talk_now"

            android:textColor="@color/black"
            android:textSize="@dimen/heading_text_18sp"
            android:fontFamily="@font/avenir_heavy"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHorizontal_bias="0.1"


            ></androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/cancel_talk_now_image"
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:text="@string/talk_now"

                android:src="@drawable/ic_launcher_background"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintVertical_bias="0.1"
                app:layout_constraintHorizontal_bias="0.9"

                app:layout_constraintWidth_percent="0.1"
                app:layout_constraintHeight_percent="0.125"


                ></androidx.appcompat.widget.AppCompatImageView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/are_you_new_user_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/are_you_a_new_user"
                android:textColor="@color/black"
                android:textSize="@dimen/heading_text_20sp"
                android:fontFamily="@font/avenir_heavy"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                ></androidx.appcompat.widget.AppCompatTextView>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/yes_no_talk_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.8"

                app:layout_constraintHeight_percent="0.175"
                >


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/yes_button_new_user"
                    android:layout_width="0dp"
                    android:layout_height="0dp"

                    android:background="@drawable/custom_button_pick"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    app:layout_constraintBottom_toBottomOf="parent"

                    android:text="@string/yes"
                    android:textColor="@color/white"
                    android:fontFamily="@font/avenir_heavy"

                    app:layout_constraintWidth_percent="0.45"
                    app:layout_constraintHeight_percent="0.8"
                    app:layout_constraintHorizontal_bias="0.05"

                    ></androidx.appcompat.widget.AppCompatButton>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/no_button_new_user"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/custom_button_black"
                    app:layout_constraintHeight_percent="0.8"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"


                    android:text="@string/no"
                    android:textColor="@color/white"
                    android:fontFamily="@font/avenir_heavy"

                    app:layout_constraintWidth_percent="0.45"
                    app:layout_constraintHorizontal_bias="0.95"

                    ></androidx.appcompat.widget.AppCompatButton>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView

        android:id="@+id/chat_whole_card_view_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.6"
        app:cardCornerRadius="@dimen/heading_text_14sp"
        android:elevation="@dimen/heading_text_14sp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="0dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"


                app:layout_constraintHeight_percent="0.075"
                app:layout_constraintWidth_percent="0.075"

                android:src="@drawable/ic_launcher_background"

                app:layout_constraintVertical_bias="0.05"
                app:layout_constraintHorizontal_bias="0.9"

                ></androidx.appcompat.widget.AppCompatImageView>


            <androidx.cardview.widget.CardView
                android:id="@+id/chat_card_view_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.9"
                app:layout_constraintHeight_percent="0.2"
                android:elevation="@dimen/heading_text_14sp"
                app:cardCornerRadius="@dimen/heading_text_14sp"
                app:layout_constraintVertical_bias="0.2"

                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintWidth_percent="0.15"
                    app:layout_constraintHeight_percent="0.4"
                    app:layout_constraintVertical_bias="0.2"
                    app:layout_constraintHorizontal_bias="0.05"
                    android:src="@drawable/ic_launcher_background"
                    ></de.hdodenhof.circleimageview.CircleImageView>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/chat_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        app:layout_constraintStart_toEndOf="@+id/img1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"

                        app:layout_constraintHorizontal_bias="0.05"


                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.2"

                        android:text="@string/chat"
                        android:textSize="@dimen/heading_text_18sp"
                        android:fontFamily="@font/avenir_heavy"

                        ></androidx.appcompat.widget.AppCompatTextView>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintStart_toEndOf="@+id/img1"
                        app:layout_constraintTop_toBottomOf="@+id/chat_text"

                        app:layout_constraintWidth_percent="0.7"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.35"

                        app:layout_constraintHeight_percent="0.4"
                        >


                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/chat_english_button"
                            android:layout_width="0dp"
                            android:layout_height="0dp"

                            android:background="@drawable/custom_button_pick"

                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"

                            app:layout_constraintBottom_toBottomOf="parent"

                            android:text="@string/english1"
                            android:textColor="@color/white"
                            android:fontFamily="@font/avenir_heavy"

                            app:layout_constraintWidth_percent="0.45"
                            app:layout_constraintHeight_percent="0.8"
                            app:layout_constraintHorizontal_bias="0.05"

                            ></androidx.appcompat.widget.AppCompatButton>


                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/chat_arbic_button"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/custom_button_pick"
                            app:layout_constraintHeight_percent="0.8"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"


                            android:text="@string/arbic"
                            android:textColor="@color/white"
                            android:fontFamily="@font/avenir_heavy"

                            app:layout_constraintWidth_percent="0.45"
                            app:layout_constraintHorizontal_bias="0.95"

                            ></androidx.appcompat.widget.AppCompatButton>

                    </androidx.constraintlayout.widget.ConstraintLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/internet_call_card_view_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.9"
                app:layout_constraintHeight_percent="0.2"
                android:elevation="@dimen/heading_text_14sp"
                app:cardCornerRadius="@dimen/heading_text_14sp"
                app:layout_constraintVertical_bias="0.5"

                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintWidth_percent="0.15"
                        app:layout_constraintHeight_percent="0.4"
                        app:layout_constraintVertical_bias="0.2"
                        app:layout_constraintHorizontal_bias="0.05"
                        android:src="@drawable/ic_launcher_background"
                        ></de.hdodenhof.circleimageview.CircleImageView>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/internet_call_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        app:layout_constraintStart_toEndOf="@+id/img2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"

                        app:layout_constraintHorizontal_bias="0.05"


                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.2"

                        android:text="@string/internet_call"
                        android:textSize="@dimen/heading_text_18sp"
                        android:fontFamily="@font/avenir_heavy"

                        ></androidx.appcompat.widget.AppCompatTextView>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintStart_toEndOf="@+id/img2"
                        app:layout_constraintTop_toBottomOf="@+id/internet_call_text"

                        app:layout_constraintWidth_percent="0.7"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.35"

                        app:layout_constraintHeight_percent="0.4"
                        >


                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/internet_english_button"
                            android:layout_width="0dp"
                            android:layout_height="0dp"

                            android:background="@drawable/custom_button_pick"

                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"

                            app:layout_constraintBottom_toBottomOf="parent"

                            android:text="@string/english1"
                            android:textColor="@color/white"
                            android:fontFamily="@font/avenir_heavy"

                            app:layout_constraintWidth_percent="0.45"
                            app:layout_constraintHeight_percent="0.8"
                            app:layout_constraintHorizontal_bias="0.05"

                            ></androidx.appcompat.widget.AppCompatButton>


                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/internet_arbic_button"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/custom_button_pick"
                            app:layout_constraintHeight_percent="0.8"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"


                            android:text="@string/arbic"
                            android:textColor="@color/white"
                            android:fontFamily="@font/avenir_heavy"

                            app:layout_constraintWidth_percent="0.45"
                            app:layout_constraintHorizontal_bias="0.95"

                            ></androidx.appcompat.widget.AppCompatButton>

                    </androidx.constraintlayout.widget.ConstraintLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cellular_call_card_view_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.9"
                app:layout_constraintHeight_percent="0.2"
                android:elevation="@dimen/heading_text_14sp"
                app:cardCornerRadius="@dimen/heading_text_14sp"
                app:layout_constraintVertical_bias="0.8"

                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img3"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintWidth_percent="0.15"
                        app:layout_constraintHeight_percent="0.4"
                        app:layout_constraintVertical_bias="0.2"
                        app:layout_constraintHorizontal_bias="0.05"
                        android:src="@drawable/ic_launcher_background"
                        ></de.hdodenhof.circleimageview.CircleImageView>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/cellular_call_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        app:layout_constraintStart_toEndOf="@+id/img3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"

                        app:layout_constraintHorizontal_bias="0.05"


                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.2"

                        android:text="@string/cellular_call"
                        android:textSize="@dimen/heading_text_18sp"
                        android:fontFamily="@font/avenir_heavy"

                        ></androidx.appcompat.widget.AppCompatTextView>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintStart_toEndOf="@+id/img3"
                        app:layout_constraintTop_toBottomOf="@+id/cellular_call_text"

                        app:layout_constraintWidth_percent="0.7"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.35"

                        app:layout_constraintHeight_percent="0.4"
                        >


                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:id="@+id/cellular_english_button"

                            android:background="@drawable/custom_button_pick"

                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"

                            app:layout_constraintBottom_toBottomOf="parent"

                            android:text="@string/english1"
                            android:textColor="@color/white"
                            android:fontFamily="@font/avenir_heavy"

                            app:layout_constraintWidth_percent="0.45"
                            app:layout_constraintHeight_percent="0.8"
                            app:layout_constraintHorizontal_bias="0.05"

                            ></androidx.appcompat.widget.AppCompatButton>


                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:id="@+id/cellular_arbic_button"
                            android:background="@drawable/custom_button_pick"
                            app:layout_constraintHeight_percent="0.8"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"


                            android:text="@string/arbic"
                            android:textColor="@color/white"
                            android:fontFamily="@font/avenir_heavy"

                            app:layout_constraintWidth_percent="0.45"
                            app:layout_constraintHorizontal_bias="0.95"

                            ></androidx.appcompat.widget.AppCompatButton>

                    </androidx.constraintlayout.widget.ConstraintLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>