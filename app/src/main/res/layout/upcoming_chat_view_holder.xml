<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/case_report_item_view"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:cardCornerRadius="14dp"

        app:cardElevation="4dp"

        app:layout_constraintBottom_toBottomOf="parent"


     app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.975">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:background="@drawable/custom_button"
                android:text="@string/accept"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"


                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.98"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.508"
                app:layout_constraintWidth_percent="0.25"></androidx.appcompat.widget.AppCompatButton>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imagecase"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/dark_white"
                android:src="@drawable/ic_launcher_background"

                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.75"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.15"></de.hdodenhof.circleimageview.CircleImageView>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/caseid_tv"
                android:layout_width="0dp"

                android:layout_height="wrap_content"


                android:fontFamily="@font/avenir_heavy"
                android:gravity="center_vertical"
                android:text="CI001068"


                android:textSize="@dimen/heading_text_20sp"

                app:layout_constraintBottom_toTopOf="@+id/timetv"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imagecase"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintWidth_percent="0.7"></androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/timetv"
                android:layout_width="0dp"


                android:layout_height="wrap_content"

                android:text="2 March 2023 06:01 PM"
                android:textSize="@dimen/heading_text_16sp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imagecase"
                app:layout_constraintTop_toBottomOf="@+id/caseid_tv"
                app:layout_constraintWidth_percent="0.7"></androidx.appcompat.widget.AppCompatTextView>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>