<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintWidth_percent="0.75"
        android:background="@drawable/background"
        android:backgroundTint="#FFFFFF"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/jflkasj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:fontFamily="@font/avenir_heavy"
                android:text="@string/shelf_registration"
                android:textSize="@dimen/heading_text_18sp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.092"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.15"></androidx.appcompat.widget.AppCompatTextView>

            <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/closeBtn2"
            app:layout_constraintTop_toTopOf="@+id/jflkasj"
                app:layout_constraintBottom_toBottomOf="@+id/jflkasj"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_percent="0.1"


            ></de.hdodenhof.circleimageview.CircleImageView>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/djsalkjldfka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:fontFamily="@font/avenir_heavy"
                android:text="@string/enable_biometric"
                android:textSize="@dimen/heading_text_18sp"


                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.095"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.543"></androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/toggle_biometric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/djsalkjldfka"
                app:layout_constraintBottom_toBottomOf="@+id/djsalkjldfka"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"

        ></androidx.appcompat.widget.SwitchCompat>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/jhsdfadhsfha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:fontFamily="@font/avenir_heavy"
                android:text="@string/change_password"
                android:textSize="@dimen/heading_text_18sp"


                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.724"></androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/job"
            app:layout_constraintTop_toBottomOf="@+id/jhsdfadhsfha"
            app:layout_constraintStart_toStartOf="@+id/jhsdfadhsfha"
            android:text="English Advocacy)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"


            ></androidx.appcompat.widget.AppCompatTextView>


        <androidx.appcompat.widget.AppCompatButton
            android:visibility="gone"
            android:id="@+id/accept_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_button"
            android:text="@string/accept"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.532"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/job">

        </androidx.appcompat.widget.AppCompatButton>


        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            app:layout_constraintTop_toBottomOf="@+id/accept_button"
            ></View>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>